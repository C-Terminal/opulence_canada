{
	"name": "opulence-canada",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"docker:dev": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
		"docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
		"db:generate": "drizzle-kit generate:pg",
		"db:migrate": "node -r scripts/migrate.js",
		"db:push": "drizzle-kit push:pg",
		"db:studio": "drizzle-kit studio",
		"db:seed": "node -r dotenv/config scripts/seed.js",
		"backup:db": "docker-compose exec postgres pg_dump -U postgres sveltekit_app > ./backups/db-backup-$(date +%Y%m%d%H%M%S).sql",
		"restore:db": "docker-compose exec -T postgres psql -U postgres -d sveltekit_app < "
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-vercel": "^5.6.3",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.11.11",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"lucia": "^3.2.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.3",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.5",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@auth/core": "^0.38.0",
		"@auth/drizzle-adapter": "^1.8.0",
		"@auth/sveltekit": "^1.8.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@lucia-auth/adapter-postgresql": "^3.1.2",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"bcrypt": "^5.1.1",
		"daisyui": "^5.0.16",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.40.1",
		"pg": "^8.14.1",
		"postgres": "^3.4.5",
		"zod": "^3.24.2"
	}
}
